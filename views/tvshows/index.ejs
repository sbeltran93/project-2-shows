    <title>My Shows</title>
  </head>
  <body>
 <%- include('../partials/_navbar.ejs') %>

    <h1>Welcome to your Tv Shows</h1>

   <% foundShowCase.forEach(item => { %>



    <span id="show"> Show:
    <%= item.title %>A fan Favorite? <%= item.didYouLoveIt %> Rating: <%= item.rating %>
    </span>
    <form action="/users/<%= user._id %>/tvshows/<%=item._id%>?_method=DELETE" method="POST">

    <button type="submit">Delete</button>
    <p class="editbutton"><a href="/users/<%= user._id %>/tvshows/<%= item._id %>/edit">Edit</a> </p>
</form>
    <div class="img1"> <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRXcWRLBkhc6qpw3n50v7AO0ve5aWnxQ2ss9g&usqp=CAU">
    </div>

    
    <% }) %>
    <p class="addbutton"><a href="/users/<%= user._id%>/tvshows/new">Add New Tv Show!</a></p>
  </body>
