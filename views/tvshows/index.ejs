    <title>My Pantry</title>
  </head>
  <body>
 <%- include('../partials/_navbar.ejs') %>

    <h1>Welcome to your Tv Shows</h1>

   <% foundShowCase.forEach(item => { %>



    <span id="show"> Show:
    <%= item.title %></span> <span id="fav">A fan Favorite? <%= item.didYouLoveIt %></span> <span id="rating"> Rating: <%= item.rating %></span>
    </span>
    <form action="/users/<%= user._id %>/tvshows/<%=item._id%>?_method=DELETE" method="POST">

    <button type="submit">Delete</button>
    <p><a href="/users/<%= user._id %>/tvshows/<%= item._id %>/edit">Edit</a> </p>
</form>


    
    <% }) %>
    <p class="addbutton"><a href="/users/<%= user._id%>/tvshows/new">Add New Tv Show!</a></p>
  </body>
